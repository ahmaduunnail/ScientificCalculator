<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLength="14"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/design_default_color_on_primary"
                android:textColorHint="@color/colorTextonSecondary"
                android:textSize="30sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/inputview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="end"
                android:hint="0"
                android:textStyle="normal"
                android:maxLength="14"
                android:paddingTop="35dp"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:textColor="@color/design_default_color_on_primary"
                android:textColorHint="@color/colorTextonSecondary"
                android:textSize="50sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:onClick="btn_delete"
            android:layout_marginBottom="13dp"
            android:background="@drawable/ic_backspace_outline_1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/outline_color"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_Log"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="20sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_ln"
            android:text="In"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="20sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_power"
            android:text="xⁿ"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="20sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_root"
            android:text="√"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="20sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_factorial"
            android:text="!"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="20sp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_sin"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="25sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_cos"
            android:text="cos"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="25sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_tan"
            android:text="tan"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="25sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_divide"
            android:text="÷"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_7"
            android:text="7"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_8"
            android:text="8"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_9"
            android:text="9"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_times"
            android:text="X"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_4"
            android:text="4"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_5"
            android:text="5"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_6"
            android:text="6"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_subtract"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_1"
            android:text="1"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_2"
            android:text="2"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_3"
            android:text="3"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_add"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <View
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_0"
            android:text="0"
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonround"
            android:layout_weight="1"
            android:onClick="btn_comma"
            android:text="."
            android:textAllCaps="false"
            android:textColor="@color/colorTextonPrimary"
            android:textSize="30sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttonroundoutline"
            android:layout_weight="1"
            android:onClick="btn_equal"
            android:text="="
            android:textAllCaps="false"
            android:textColor="@color/bluecolor"
            android:textSize="30sp"/>

    </LinearLayout>



</LinearLayout>